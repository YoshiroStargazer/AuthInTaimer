<Window x:Class="AuthInTaimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthInTaimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Логин"
                       TextAlignment="Center"
                       Width="50"
                       Margin="5"/>
            <TextBox Name="LogTxb"
                     Margin="5"
                     Width="300"/>
            <TextBlock Text="Пароль"
                       TextAlignment="Center"
                       Width="50"/>
            <PasswordBox Name="PasswordPsb"
                         Margin="5"
                         Width="300"/>
            <Button Name="LogBtn"
                    Margin="5"
                    Width="200"
                    Height="20"
                    Content="Войти" Click="LogBtn_Click"/>

        </StackPanel>
    </Grid>
</Window>
